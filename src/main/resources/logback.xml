<configuration scan="true">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/chain-replication-app.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <append>true</append>
    </appender>
    <appender name="ZK-FILE" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/chain-replication-zk.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <append>true</append>
    </appender>
    <logger name="edu.sjsu.cs249" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
    </logger>
    <logger name="org.apache.zookeeper" level="INFO" additivity="false">
        <appender-ref ref="ZK-FILE" />
    </logger>
    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
    <shutdownHook/>
</configuration>